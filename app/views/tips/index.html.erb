<h1>Listing tips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Activity type</th>
      <th>Description</th>
      <th>Votes</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= link_to tip.name, tip %></td>
        <td><%= tip.activity_type %></td>
        <td><%= tip.description %></td>
        <td><%= tip.votes.count %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip) if tip.user == current_user %></td>
        <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } if tip.user == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tip', new_user_tip_path(@user) if @user %>
